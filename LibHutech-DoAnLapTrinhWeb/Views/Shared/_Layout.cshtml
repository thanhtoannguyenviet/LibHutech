<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="//mozilla.github.io/pdf.js/build/pdf.js"></script>
</head>
<body>
    <div class="row">
        <div class="col-9">
            <img src="@Url.Content("~/Uploads/Images/hutech-logo.png")" alt="Hutech Logo">
        </div>
        <div class="col-3">
            <button type="button" class="btn btn-success text-right float-right" data-toggle="modal" data-target="#login">
                Đăng Nhập
            </button>
            <button type="button" class="btn btn-success text-right float-right" data-toggle="modal" data-target="#signin">
                Đăng ký
            </button>
            <div class="modal fade" id="login" tabindex="-1" role="dialog" aria-labelledby="login" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        @using (Html.BeginForm("Login", "Home", FormMethod.Post))
                        {
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">Đăng nhập</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <label>Username</label>
                                <input type="text" class="form-control" id="Username" name="Username">
                                <label>Password</label>
                                <input type="password" class="form-control" id="Password" name="Password">
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                <button type="submit" class="btn btn-primary">Save changes</button>
                            </div>
                        }
                    </div>
                </div>
            </div>
            <div class="modal fade" id="signin" tabindex="-1" role="dialog" aria-labelledby="signin" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        @using (Html.BeginForm("Create", "Home", FormMethod.Post))
                        {
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">Đăng ký</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <label>Username (Email):</label>
                                <input type="text" class="form-control" id="Username" name="Username">
                                <label>Họ Tên:</label>
                                <input type="text" class="form-control" id="HoTen" name="HoTen">
                                <label>Username</label>
                                <input type="text" class="form-control" id="Nganh" name="Nganh">
                                <label>Username</label>
                                <input type="text" class="form-control" id="SDT" name="SDT">
                                <div class="col-md-10">

                                    <input title="Upload a pic"
                                           type="file" name="ImgSv"  onchange="changeImage(this)"/></div>
                                 <label>Password</label>
                                 <input type="password" class="form-control" id="Password" name="Password">
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                    <button type="submit" class="btn btn-primary">Save changes</button>
                                </div>
                                }
                            </div>
                </div>
            </div>
        </div>
    </div>
        <nav class="navbar navbar-header navbar-expand-sm">
            <div class="container">
                <!-- Brand -->
                <a class="navbar-brand" href="#" style="color:black">THƯ VIỆN</a>

                <!-- Links -->
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="#" style="color: #0063CD;">TRANG CHỦ</a>
                    </li>

                    <!-- Dropdown -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbardrop" data-toggle="dropdown">
                            GIỚI THIỆU
                        </a>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" href="#">Tổng quan</a>
                            <a class="dropdown-item" href="#">Lịch hoạt động</a>
                            <a class="dropdown-item" href="#">Nội quy</a>
                        </div>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbardrop" data-toggle="dropdown">
                            TÀI NGUYÊN THÔNG TIN
                        </a>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" href="#">Nghành học - Môn học</a>
                            <a class="dropdown-item" href="#">Luận văn</a>
                        </div>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">TRA CỨU</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">SÁCH MỚI</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbardrop" data-toggle="dropdown">
                            LIÊN KẾT
                        </a>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" href="#">Stinet</a>
                            <a class="dropdown-item" href="#">Cơ sở dữ liệu</a>
                        </div>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">LIÊN HỆ</a>
                    </li>
                </ul>
            </div>
        </nav>



    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
