
@{
    string currentName = Convert.ToString(HttpContext.Current.Request.RequestContext.RouteData.Values["Controller"]);
    switch (currentName)
    {
        case "Home":
            //Admin layout
            Layout = "~/Views/Shared/_Layout.cshtml";
            break;
        default:
            Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
            break;
    }
}